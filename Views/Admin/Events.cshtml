@model IEnumerable<EventBookingSystemV1.ViewModels.EventViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Manage Events";
}
<link rel="stylesheet" href="~/css/admin.css" />

<div class="container-admin">
    <a href="javascript:history.back()" class="btn-admin mb-3">← Back</a>
	<br />
	<br />  
    <h2>Manage Events</h2>

    <form method="get" class="mb-3 d-flex">
        <input name="search"
               value="@(ViewData["Search"] ?? string.Empty)"
               class="form-control me-2"
               placeholder="Search events..." />
        <button type="submit" class="btn-outline-admin">Search</button>
    </form>

    <table class="table-admin">
        <thead>
            <tr>
                <th>Title</th>
                <th>Category</th>
                <th>Venue</th>
                <th>Date</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var e in Model)
            {
                <tr>
                    
                    <td>@e.Title</td>
                    <td>@e.CategoryName</td>
                    <td>@e.VenueName</td>
                    <td>@e.Date.ToString("yyyy-MM-dd")</td>
                    <td>@e.Price.ToString("C")</td>
                    <td>
                        <a asp-action="EventDetails" asp-route-id="@e.Id" class="btn-outline-admin btn-sm me-1">Details</a>
                        <form asp-action="DeleteEvent"
                              asp-route-id="@e.Id"
                              method="post"
                              class="d-inline"
                              onsubmit="return confirm('Are you sure you want to delete this event?');">
                            @Html.AntiForgeryToken()
                            <button class="btn-admin btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @* Pagination *@
    @{
        var current = (int)ViewData["CurrentPage"];
        var total = (int)ViewData["TotalPages"];
    }
    <ul class="pagination-admin">
        @for (int i = 1; i <= total; i++)
        {
            <li class="@(i == current ? "active" : "")">
                <a asp-action="Events"
                   asp-route-page="@i"
                   asp-route-search="@(ViewData["Search"] ?? string.Empty)">
                    @i
                </a>
            </li>
        }
    </ul>
</div>
