@model DashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-admin fade-in">
    <div class="card-admin mb-6">
        <div class="card-header-admin card-header-accent">
            <h1 class="card-title-admin mb-0">Admin Dashboard</h1>
        </div>

        <div class="card-body-admin">
            <div class="row-admin">
                <!-- Users Stats Card -->
                <div class="col-admin-3 col-md-6 mb-4">
                    <div class="stats-card-admin bg-primary-admin">
                        <div class="stats-icon-admin">
                            <i class="fas fa-users"></i>
                        </div>
                        <div class="stats-content-admin">
                            <div class="stats-value-admin">@Model.TotalUsers</div>
                            <div class="stats-label-admin">Total Users</div>
                            <div class="stats-trend-admin">
                                <i class="fas fa-user-plus"></i>
                                <span>@Model.PendingVerifications pending verifications</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Events Stats Card -->
                <div class="col-admin-3 col-md-6 mb-4">
                    <div class="stats-card-admin bg-accent-admin">
                        <div class="stats-icon-admin">
                            <i class="fas fa-calendar-alt"></i>
                        </div>
                        <div class="stats-content-admin">
                            <div class="stats-value-admin">@Model.TotalEvents</div>
                            <div class="stats-label-admin">Total Events</div>
                            <div class="stats-trend-admin">
                                <i class="fas fa-calendar-check"></i>
                                <span>Manage events</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Bookings Stats Card -->
                <div class="col-admin-3 col-md-6 mb-4">
                    <div class="stats-card-admin bg-success-admin">
                        <div class="stats-icon-admin">
                            <i class="fas fa-ticket-alt"></i>
                        </div>
                        <div class="stats-content-admin">
                            <div class="stats-value-admin">@Model.TotalBookings</div>
                            <div class="stats-label-admin">Total Bookings</div>
                            <div class="stats-trend-admin">
                                <i class="fas fa-check-circle"></i>
                                <span>View all bookings</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- System Stats Card -->
                <div class="col-admin-3 col-md-6 mb-4">
                    <div class="stats-card-admin bg-info-admin">
                        <div class="stats-icon-admin">
                            <i class="fas fa-cogs"></i>
                        </div>
                        <div class="stats-content-admin">
                            <div class="stats-value-admin">System</div>
                            <div class="stats-label-admin">Administration</div>
                            <div class="stats-trend-admin">
                                <i class="fas fa-history"></i>
                                <span>View audit logs</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row-admin">
                <div class="col-admin-6">
                    <div class="card-admin">
                        <div class="card-header-admin">
                            <h3 class="card-title-admin">Quick Actions</h3>
                        </div>
                        <div class="card-body-admin">
                            <div class="d-flex flex-wrap" style="gap: 10px;">
                                <a href="@Url.Action("Events", "Admin")" class="btn-admin btn-accent-admin">
                                    <i class="fas fa-plus-circle"></i> Manage Events
                                </a>
                                <a href="@Url.Action("Users", "Admin")" class="btn-admin btn-primary-admin">
                                    <i class="fas fa-user-cog"></i> Manage Users
                                </a>
                                <a href="@Url.Action("Bookings", "Admin")" class="btn-admin btn-success-admin">
                                    <i class="fas fa-list"></i> View Bookings
                                </a>
                                <a href="@Url.Action("Audit", "Admin")" class="btn-admin btn-info-admin">
                                    <i class="fas fa-history"></i> Audit Logs
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-admin-6">
                    <div class="card-admin">
                        <div class="card-header-admin">
                            <h3 class="card-title-admin">System Status</h3>
                        </div>
                        <div class="card-body-admin">
                            <ul class="list-group">
                                <li class="d-flex justify-content-between align-items-center p-3 border-bottom-admin">
                                    <span><i class="fas fa-check-circle text-success-admin mr-2"></i> Database Connection</span>
                                    <span class="badge-admin badge-admin-success badge-admin-pill">Online</span>
                                </li>
                                <li class="d-flex justify-content-between align-items-center p-3 border-bottom-admin">
                                    <span><i class="fas fa-check-circle text-success-admin mr-2"></i> File Storage</span>
                                    <span class="badge-admin badge-admin-success badge-admin-pill">Available</span>
                                </li>
                                <li class="d-flex justify-content-between align-items-center p-3">
                                    <span><i class="fas fa-check-circle text-success-admin mr-2"></i> Email Service</span>
                                    <span class="badge-admin badge-admin-success badge-admin-pill">Operational</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>