@model IEnumerable<EventBookingSystemV1.ViewModels.BookingListViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Manage Bookings";
}
<link rel="stylesheet" href="~/css/admin.css" />

<div class="container-admin">
    <a href="javascript:history.back()" class="btn-admin mb-3">← Back</a>
    <br />
	<br />  
    <h2>Manage Bookings</h2>

    <form method="get" class="mb-3 d-flex">
        <input name="search"
               value="@(ViewData["Search"] ?? string.Empty)"
               class="form-control me-2"
               placeholder="Search bookings..." />
        <button type="submit" class="btn-outline-admin">Search</button>
    </form>

    <table class="table-admin">
        <thead>
            <tr>
                <th>User</th>
                <th>Email</th>
                <th>Event</th>
                <th>Event Date</th>
                <th>Booked At</th>
                <th>Tickets</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var b in Model)
            {
                <tr>
                    <td>@b.UserName</td>
                    <td>@b.UserEmail</td>
                    <td>@b.EventTitle</td>
                    <td>@b.EventDate.ToString("yyyy-MM-dd")</td>
                    <td>@b.BookedAt.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@b.TicketCount</td>
                    <td>
                        <form asp-action="DeleteBooking"
                              asp-route-id="@b.Id"
                              method="post"
                              class="d-inline"
                              onsubmit="return confirm('Are you sure you want to delete this booking?');">
                            @Html.AntiForgeryToken()
                            <button class="btn-admin btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @{
        var current = (int)ViewData["CurrentPage"];
        var total = (int)ViewData["TotalPages"];
    }
    <ul class="pagination-admin">
        @for (int i = 1; i <= total; i++)
        {
            <li class="@(i == current ? "active" : "")">
                <a asp-action="Bookings"
                   asp-route-page="@i"
                   asp-route-search="@(ViewData["Search"] ?? string.Empty)">
                    @i
                </a>
            </li>
        }
    </ul>
</div>
