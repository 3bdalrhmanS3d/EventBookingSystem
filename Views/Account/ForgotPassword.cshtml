@model EventBookingSystemV1.DTOs.ForgotPasswordDto
@{
    Layout = null;
    ViewData["Title"] = "Forgot Password - Eventbookings";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
          rel="stylesheet"
          crossorigin="anonymous" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background: linear-gradient(135deg, #667eea, #764ba2);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .forgot-wrap .form-container {
            width: 500px;
            height: 450px;
            padding: 2rem;
            background: #fff;
            border-radius: 1rem;
            box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15);
            display: flex;
            flex-direction: column;
            justify-content: center;
            text-align: center;
        }

        .form-container h2 {
            font-size: 1.75rem;
            font-weight: 700;
            margin-bottom: 1rem;
        }

        .form-container p {
            margin-bottom: 1.5rem;
            font-size: 1rem;
        }

        .form-label {
            font-weight: 600;
            font-size: 1.3rem;
        }

        .form-control {
            border-radius: 0.5rem;
            padding: 0.75rem;
            font-size: 1rem;
        }

        .btn-primary {
            background-color: #764ba2;
            border: none;
            padding: 0.75rem;
            font-size: 1rem;
            border-radius: 0.5rem;
        }

            .btn-primary:hover {
                background-color: #5a3591;
            }

        .links {
            margin-top: 1.5rem;
            font-size: 1rem;
        }

            .links a {
                color: #764ba2;
                text-decoration: none;
            }

                .links a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="forgot-wrap">
        <div class="form-container">
            <h2>Account Recovery</h2>
            <p>
                Don't worry. Resetting your password is easy, just tell us the email address you registered
            </p>
            <form asp-action="ForgotPassword" method="post" autocomplete="off">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="mb-4 text-start">
                    <label asp-for="EmailAddress" class="form-label">Email Address</label>
                    <input asp-for="EmailAddress"
                           class="form-control"
                           placeholder="you@example.com" />
                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100">
                    Send Reset Link
                </button>
            </form>

            <div class="links">
                <a asp-action="SignIn">Return to Login</a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            crossorigin="anonymous"></script>
    <script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</body>
</html>
