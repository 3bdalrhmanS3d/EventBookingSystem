@model EventBookingSystemV1.ViewModels.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<link rel="stylesheet" href="~/css/home.css" />

<div class="profile-container">
    <div class="profile-header profile-header-accent">
        <h1 class="profile-title">Error</h1>
    </div>

    <div class="profile-body text-center">
        <div class="mb-4">
            <i class="bi bi-exclamation-triangle" style="font-size: 4rem; color: var(--error-color);"></i>
        </div>

        <h2 class="profile-section-title">An error occurred while processing your request.</h2>

        @if (Model.ShowRequestId)
        {
            <p class="text-muted">
                <strong>Request ID:</strong> <code>@Model.RequestId</code>
            </p>
        }

        <div class="mt-5">
            <a href="@Url.Action("Index", "Home")" class="btn-admin btn-primary-admin">
                <i class="bi bi-house"></i> Return to Home Page
            </a>
        </div>
    </div>
</div>